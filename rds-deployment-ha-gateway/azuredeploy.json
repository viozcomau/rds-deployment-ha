{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string"
        },
        "lbGwName": {
            "type": "string",
            "metadata": {
                "description": "The Loadbalancer name must match from the RDS deployment. And default value taken by template is loadbalancer."
            },
            "defaultValue": "lbGwName"
        },
        "lbGwBe": {
            "type": "string"
        },
        "adDomainName": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of the AD domain"
            }
        },
        "domainNetbios": {
            "type": "string",
            "metadata": {
                "description": "Netbios Name for Domain"
            }
        },
        "adminUserName": {
            "type": "string",
            "metadata": {
                "description": "The name of the administrator of the new VM and the domain. Exclusion list: 'administrator"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the administrator account of the new VM and the domain"
            }
        },
        "numberOfGwInstances": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "Number of RD Gateway instances"
            }
        },
        "brokerServer": {
            "type": "string",
            "metadata": {
                "description": "FQDN for Broker Server"
            }
        },
        "WebURL": {
            "type": "string",
            "metadata": {
                "description": "This is RD Gateway external FQDN. This shall be picked from existing basic RDS deploment."
            }
        },
        "stDiagName": {
            "type": "string"
        },
        "vmImageSku": {
            "type": "string",
            "allowedValues": [
                "2012-R2-Datacenter",
                "2016-Datacenter"
            ],
            "metadata": {
                "description": "Windows server SKU"
            },
            "defaultValue": "2016-Datacenter"
        },
        "vmGwSize": {
            "type": "string",
            "defaultValue": "Standard_A2_v2",
            "metadata": {
                "description": "Size for the new RD Gateway VMs"
            }
        },
        "availGwName": {
            "type": "string"
        },
        "vmGwName": {
            "type": "string"
        },
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "The name of the resourceGroup for the vnet"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The vnet name of AD domain. For example johnvnet1"
            }
        },
        "snetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet name of AD domain. For example johnsubnet1"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "imagePublisher": "MicrosoftWindowsServer",
        "imageOffer": "WindowsServer",
        "snetId": "[resourceId(parameters('rgName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('snetName'))]",
        "lbGwId": "[resourceId(parameters('rgName'), 'Microsoft.Network/loadBalancers', parameters('lbGwName'))]",
        "lbGwBeAddressPoolId": "[concat(variables('lbGwId'),'/backendAddressPools/',parameters('lbGwBe'))]",
        "availGwId": "[resourceId(parameters('rgName'),'Microsoft.Compute/availabilitySets',parameters('availGwName'))]",
        "nicPrefix": "nic-",
        "assetLocation": "[parameters('_artifactsLocation')]"
    },
    "resources": [
        {
            "name": "[concat(variables('nicPrefix'),parameters('vmGwName'),copyindex(1))]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[parameters('location')]",
            "apiVersion": "2017-06-01",
            "copy": {
                "name": "gw-nic-loop",
                "count": "[parameters('numberOfGwInstances')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('snetId')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('lbGwBeAddressPoolId')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                            ]
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('vmGwName'),copyindex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[parameters('location')]",
            "apiVersion": "2018-10-01",
            "copy": {
                "name": "gw-vm-loop",
                "count": "[parameters('numberOfGwInstances')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/',variables('nicPrefix'),parameters('vmGwName'), copyindex(1))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmGwSize": "[parameters('vmGwSize')]"
                },
                "availabilitySet": {
                    "id": "[variables('availGwId')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('vmGwName'),copyindex(1))]",
                    "adminUserName": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[parameters('vmImageSku')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmGwName'),copyindex(1),'-osdisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicPrefix'),parameters('vmGwName'),copyindex(1)))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('http://', parameters('stDiagName'), '.blob.core.windows.net')]"
                    }
                }
            },
            "resources": [
                {
                    "name": "[concat(parameters('vmGwName'),copyindex(1),'/gateway')]",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2017-12-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', Concat(parameters('vmGwName'),copyindex(1)))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.76",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "[concat(variables('assetLocation'),'/Configuration.zip')]",
                            "ConfigurationFunction": "Configuration.ps1\\Gateway",
                            "properties": {
                                "DomainName": "[parameters('adDomainName')]",
                                "AdminCreds": {
                                    "UserName": "[parameters('adminUserName')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('adminPassword')]"
                            }
                        }
                    }
                },
                {
                    "apiVersion": "2015-06-15",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "name": "[concat('gw-vm-',copyindex(1),'/WebAndGwFarmAdd_PostConfig1.1')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', Concat('gw-vm-',copyindex(1)))]",
                        "[concat('Microsoft.Compute/virtualMachines/','gw-vm-',copyindex(1),'/extensions/','Gateway')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/rds-deployment-ha-gateway/Scripts/WebAndGwFarmAdd_PostConfig1.1.ps1"
                            ]
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('adminPassword')]"
                            },
                            "commandToExecute": "[Concat('powershell.exe -ExecutionPolicy Unrestricted -File', ' ', 'WebAndGwFarmAdd_PostConfig1.1.ps1',' ','-username \"',parameters('adminusername'),'\" ', '-password \"',parameters('adminpassword'),'\" ','-BrokerServer \"',parameters('BrokerServer'),'\" ','-WebURL \"',parameters('WebURL'),'\" ','-Domainname \"',parameters('adDomainName'),'\" ','-DomainNetbios \"',parameters('DomainNetbios'),'\" ','-numberofwebServers ',parameters('numberOfGwInstances'))]"
                        }
                    }
                }
            ]
        }
    ]
}
